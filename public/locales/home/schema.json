{
  "type": "object",
  "additionalProperties": false,
  "required": [
    "$schema",
    "page",
    "partials",
    "intro",
    "aboutMe",
    "skills"
  ],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "page": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "title"
      ],
      "properties": {
        "title": {
          "type": "string"
        }
      }
    },
    "partials": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "contactBar"
      ],
      "properties": {
        "contactBar": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "btnSocialMediaTitle",
            "btnEmailTitle",
            "btnResume"
          ],
          "properties": {
            "btnSocialMediaTitle": {
              "type": "string"
            },
            "btnEmailTitle": {
              "type": "string"
            },
            "btnResume": {
              "type": "string"
            }
          }
        }
      }
    },
    "intro": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "expertise",
        "imageAlt"
      ],
      "properties": {
        "expertise": {
          "type": "string"
        },
        "imageAlt": {
          "type": "string"
        }
      }
    },
    "aboutMe": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "topic",
        "imageAlt",
        "paragraph"
      ],
      "properties": {
        "topic": {
          "type": "string"
        },
        "imageAlt": {
          "type": "string"
        },
        "paragraph": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "content",
            "tags"
          ],
          "properties": {
            "content": {
              "type": "string"
            },
            "tags": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "abbr"
              ],
              "properties": {
                "abbr": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": [
                    "lang",
                    "title"
                  ],
                  "properties": {
                    "lang": {
                      "type": "string"
                    },
                    "title": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "skills": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "topic",
        "btnToggle",
        "table"
      ],
      "properties": {
        "topic": {
          "type": "string"
        },
        "btnToggle": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "content",
            "active",
            "inactive"
          ],
          "properties": {
            "content": {
              "type": "string"
            },
            "active": {
              "type": "string"
            },
            "inactive": {
              "type": "string"
            }
          }
        },
        "table": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "headers",
            "title"
          ],
          "properties": {
            "headers": {
              "type": "array",
              "minItems": 4,
              "maxItems": 4,
              "uniqueItems": true,
              "items": {
                "type": "string"
              }
            },
            "title": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}